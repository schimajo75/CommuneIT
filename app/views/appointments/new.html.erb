<h1>New Inquiry</h1>

<% if @appointment.errors.any? %>
<div id="error_explanation">
  <h2>There were some errors:</h2>
  <ul>
    <% @appointment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for @appointment do |f| %>

<br><%= f.collection_select :client_id, Client.all, :id, :email %><br><br>
<%= f.label :issue %><br>   
<%= f.text_field :issue %><br>
<%= f.label :notes %><br>
<%= f.text_area :notes %><br>
<%= f.label :phone_or_email_reply? %> (if phone, 
  please provide ph#)<br>   
<%= f.text_field :phone_or_email_reply? %><br><br>

<p>request consultant (or first available)
<br><%= f.collection_select :consultant_id, Consultant.all, :id, :name %><br>
<br>

<%end%>
