<h1>New Appointment Request</h1>

<% if @appointment.errors.any? %>
<div id="error_explanation">
  <h2>There were some errors:</h2>
  <ul>
    <% @appointment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for @appointment do |f| %>

<br><%= f.collection_select :boomer_id, Boomer.all, :id, :last_name %><br>
<%= f.label :issue %><br>   
<%= f.text_field :issue %><br>
<%= f.label :notes %><br>
<%= f.text_area :notes %><br>

<p>request consultant (or first available)
<br><%= f.collection_select :consultant_id, Consultant.all, :id, :name %><br>
<%= f.submit %>
<%end%>
